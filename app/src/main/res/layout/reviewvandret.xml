<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lundwall.beerallover.BeerAllOverMain$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make or change your review of"
        android:id="@+id/olnavnlabel"
        android:textColor="@color/colorListeTekst" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="olnavn"
        android:id="@+id/olnavn"
        android:layout_below="@+id/olnavnlabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="false"
        android:baselineAligned="false"
        android:layout_below="@+id/olnavn"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:id="@+id/stjerner">

        <ImageButton
            android:layout_width="10dp"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent"
            android:id="@+id/s1"
            android:background="@drawable/star0"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:focusable="true" />

        <ImageButton
            android:layout_width="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent"
            android:id="@+id/s2"
            android:background="@drawable/star0"
            android:layout_weight="1"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusable="true" />

        <ImageButton
            android:layout_width="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent"
            android:id="@+id/s3"
            android:background="@drawable/star0"
            android:layout_weight="1"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusable="true" />

        <ImageButton
            android:layout_width="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent"
            android:id="@+id/s4"
            android:background="@drawable/star0"
            android:layout_weight="1"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusable="true" />

        <ImageButton
            android:layout_width="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent"
            android:id="@+id/s5"
            android:background="@drawable/star0"
            android:layout_weight="1"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusable="true" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/olcomment"
        android:text="@string/YourComment"
        android:padding="5dp"
        android:gravity="top|left"
        android:maxLines="5"
        android:textAlignment="gravity"
        android:foregroundTintMode="src_in"
        android:layout_below="@+id/stjerner"
        android:layout_alignStart="@+id/stjerner"
        android:layout_alignEnd="@+id/stjerner"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:scrollIndicators="right"
        android:inputType="textCapSentences|textAutoCorrect|text|textMultiLine"
        android:minHeight="70dp"
        android:background="@drawable/edittextstyle"
        android:textColor="@color/colorLysTekst"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendreview"
        android:text="@string/SendReview"
        android:singleLine="false"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/olcomment"
        android:layout_alignParentEnd="true"
        android:background="@drawable/knaptextstyle"
        android:textAllCaps="false"
        android:textColor="@color/colorMorkTekst"
        android:paddingLeft="@dimen/Knappadding"
        android:paddingRight="@dimen/Knappadding"
      />

</RelativeLayout>